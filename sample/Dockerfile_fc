# Stage 1: Build React app
FROM node:20-alpine AS build

WORKDIR /app

# Copy root-level package files
COPY package.json package-lock.json ./

RUN npm install

# Copy all root src (contains main.tsx)
COPY src ./src

# Copy frontend supporting src folder
COPY frontend/src ./frontend_src

# Copy config files and index.html from root
COPY vite.config.ts tailwind.config.js postcss.config.js index.html ./

# Build React app
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy built frontend
COPY --from=build /app/dist /usr/share/nginx/html

# Copy Nginx config
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
